<h2>Create New Guidance</h2>
<form action="/guidance" method="POST">
  <label for="min_gpa">Minimum GPA:</label>
  <input type="number" step="0.01" name="min_gpa" id="min_gpa" required />

  <label for="max_gpa">Maximum GPA:</label>
  <input type="number" step="0.01" name="max_gpa" id="max_gpa" required />

  <label for="status_level">Status Level:</label>
  <input type="text" name="status_level" id="status_level" required />

  <label for="major">Major:</label>
  <input type="text" name="major" id="major" required />

  <label for="content">Content:</label>
  <textarea name="content" id="content" required></textarea>

  <button type="submit">Create Guidance</button>
</form>